NavigationInfo { type [ "EXAMINE" "ANY" ] } ###  Default X3D NavigationInfo

Viewpoint {
  description "Blinking ball"
  position 0 0 4
}
Group {
  children [
      Shape {
        appearance Appearance {
          material DEF BALL_COLOR Material {
            diffuseColor 0.4 0.4 0.4
          }
        }
        geometry Sphere {
        }
      }
      DEF CLOCK TimeSensor {
        cycleInterval 2
        loop TRUE
      }
      DEF COLOR_PATH ColorInterpolator {
        key [ 0.0 0.5 0.5 1.0 ]
        keyValue [ 0 1 0 0 1 0 0 0 1 0 0 1 ]
      }
  ]
}
ROUTE CLOCK.fraction_changed TO COLOR_PATH.set_fraction
ROUTE COLOR_PATH.value_changed TO BALL_COLOR.set_emissiveColor
